{
    "name": "electron-typescript-boilerplate",
    "version": "1.0.0",
    "description": "Boilerplate for building an Electron application written in Typescript, with SASS for CSS and Handlebars for HTML templating.",
    "main": "dist/index.js",
    "scripts": {
        "start": "gulp",
        "dev": "gulp default",
        "serve": "gulp serve",
        "electron": "electron .",
        "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=dist/assets/icons/mac/icon.icns --prune=true --out=release-builds",
        "package-win": "electron-packager . electron-typescript-boilerplate --overwrite --asar=true --platform=win32 --arch=ia32 --icon=dist/assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"electron-typescript-boilerplate\"",
        "package-linux": "electron-packager . electron-typescript-boilerplate --overwrite --asar=true --platform=linux --arch=x64 --icon=dist/assets/icons/png/icon.png --prune=true --out=release-builds"
    },
    "dependencies": {
        "electron": "^1.8.2"
    },
    "devDependencies": {
        "browser-sync": "^2.23.6",
        "electron-packager": "^11.0.1",
        "gulp": "^3.9.1",
        "gulp-autoprefixer": "^4.1.0",
        "gulp-concat": "^2.6.1",
        "gulp-hb": "^7.0.1",
        "gulp-merge-json": "^1.2.1",
        "gulp-rename": "^1.2.2",
        "gulp-sass": "^3.1.0",
        "gulp-sourcemaps": "^2.6.4",
        "gulp-tslint": "^8.1.3",
        "gulp-typescript": "^4.0.1",
        "normalize-scss": "^7.0.1",
        "rimraf": "^2.6.2",
        "tslint": "^5.9.1",
        "typescript": "^2.7.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/andreros/electron-typescript-boilerplate"
    },
    "bugs": {
        "url": "https://github.com/andreros/electron-typescript-boilerplate/issues"
    },
    "homepage": "https://github.com/andreros/electron-typescript-boilerplate#readme",
    "keywords": [
        "boilerplate",
        "electron",
        "typescript",
        "SASS",
        "handlebars"
    ],
    "author": "Andr√© Rosa <andreros@gmail.com>",
    "contributors": [],
    "license": "Unlicense"
}
