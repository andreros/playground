extends layout

block content

    //------------------------------------------------------------------------------------------------------------------
    // News
    //------------------------------------------------------------------------------------------------------------------
    each news, count in newsList
        if count == 0
            div.jumbotron.news
                div.container
                    div.row
                        div.col-md-2.text-center
                            br
                            br
                            img.img-circle(src="/images/#{news.image}", width="150", height="150")
                        div.col-md-10
                            h1 #{news.title}
                            p #{news.subtitle}
                            p
                                a.btn.btn-default.btn-lg(href="/news/#{news._id}/") Read more &raquo;

    div.container
        each news, count in newsList
            if count > 0
                div.row
                    div.col-md-2.text-center
                        br
                        img.img-circle(src="/images/#{news.image}", width="100", height="100")
                    div.col-md-10
                        h2 #{news.title}
                        h4 #{news.subtitle}
                        p
                            a.btn.btn-default(href="/news/#{news._id}/", role="button") Read more &raquo;
                        br
                if count < newsList.length - 1
                    hr